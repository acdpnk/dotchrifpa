# global aliases to mimic ios-shortcuts
	alias -g kk='":*:*"'
	alias -g jj='"\o/"'
	alias -g hrt='"<3"'
	alias -g shrg='"¯\_(ツ)_/¯"'

# aliases for dropbox
	alias dropbox='python /usr/bin/dropbox.py'
	alias drpstart='dropbox start'
	alias drpstop='dropbox stop'
	alias drpstat='dropbox status'
	alias drpmon='PRVSTAT=" "; while true; do STAT="`dropbox status`"; if [ "$PRVSTAT" !=  "$STAT" ]; then echo `date +%H:%M:%S` --  $STAT; fi; PRVSTAT="$STAT"; sleep 1s; done'
	alias drpstm='dropbox start; drpmon'

# git
 	alias g='git'
	alias gin='git init'
	alias gadd='git add'
	alias gcom='git commit -m'
	alias gco='git checkout'
	alias gcb='git checkout -b'
	alias gpull='git pull'
	alias gpush='git push'
	alias gbr='git branch'
# misc
	alias pip='sudo python-pip'
	alias dte='date +%y%m%d%H%M%S'
	alias la='ls -a'
	alias getip='curl icanhazip.com'
	alias clp='tr -d '\n' | xclip -selection clipboard'


# aliases for starting programs
	alias cr='google-chrome &'
	alias fil='nautilus &'
	alias emp='empathy &'
	alias qti='qtiplot &'
	alias sub='sublime &'
	alias py='python'
	alias ea='sudo date > /dev/null ; sudo etherape &'
	alias sc='custom-screencapture'

# suffix-aliases
	alias -s png='eog'
	alias -s jpg='eog &'
	alias -s jpeg='eog &'

	alias -s html='google-chrome &'
	alias -s htm='google-chrome &'

	alias -s txt='sublime &'
	alias -s c='sublime &'
	alias -s java='sublime &'
	alias -s cc='sublime &'

	alias -s pdf='acroread &'

