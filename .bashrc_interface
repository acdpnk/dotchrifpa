# functions

function isgit {
	echo $(git rev-parse --git-dir 2>&1 | grep -c fatal)
}



function gitbranch {
	if [ $(isgit) == "0" ]; then
		echo -n ' on '
		git rev-parse --abbrev-ref HEAD
	fi
}

function promptsign {
	if [ $(isgit) == "0" ]; then
		echo Â¥
	else
		echo $
	fi
}

# prompt

PS1='[$(date +%H:%M)] [\u@\h \W$(gitbranch)]$(promptsign) '


# environmental stuff

set -o vi
