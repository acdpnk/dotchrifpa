# functions
	
	function activejobs {
		if [ $(jobs | grep -c Running) != "0" ] || [ $(jobs | grep -c Stopped) != "0" ]; then
			echo 1 
		else
			echo 0
		fi	
	}

	function isgit {
		echo $(git rev-parse --git-dir 2>&1 | grep -c fatal)
	}

	function gitisclean {
		if [ $(isgit) == "0" ] && [ $(git status 2>&1 | grep -c clean) == "0" ]; then
			echo •
		fi
	}

	function gitbranch {
		if [ $(isgit) == "0" ]; then
			echo -n ' on '
			git rev-parse --abbrev-ref HEAD 2>/dev/null
		fi
	}

	function promptsign {
		if [ $(activejobs) == "1" ]; then
			echo ¥
		else
			echo $
		fi
	}

# prompt
	PS1='[\u@\h \W$(gitbranch)$(gitisclean)][${?/^0$/}]$(promptsign) '


# environmental stuff
	set -o vi
